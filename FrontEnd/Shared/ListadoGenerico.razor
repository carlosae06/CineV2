@typeparam Titem

@if (Listado == null)
{
    @if (Cargando == null)
    {
        <text>Cargando...</text>
    }
    else
    {
        @Cargando
    }

}
else if (Listado.Count == 0)
{
    @if (NoHayRegistro == null)
    {
        <text>No hay registro para mostrar...</text>
    }
    else
    {
        @NoHayRegistro
    }

}
else
{
    @if (HayRegistro != null)
    {
        @foreach (var item in Listado)
        {
            @HayRegistro(item)
        }

    }
    else
    {
        @HayRegistroCompleto
    }
}

    


@code {
    [Parameter] public RenderFragment? Cargando { get; set; }
    [Parameter] public RenderFragment? NoHayRegistro { get; set; }
    [Parameter] public RenderFragment<Titem>? HayRegistro { get; set; }
    [Parameter] public RenderFragment? HayRegistroCompleto { get; set; }
    [Parameter] public List<Titem>? Listado { get; set; }


}
